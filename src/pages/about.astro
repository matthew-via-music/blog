  margin-top: -15px;
}
img.devicon.iconsmall:last-child{
  margin-right: -5px;
} */

@media (min-width: 480px){
  p{
    max-width: 80%;
  }
}

@media (min-width: 677px){
  h1{
    margin: 30px 0 28px;
  }
  img.devicons{
    margin-top: 0px;
  }
  p{
    max-width: 70%;
  }
  img.devicons{
    max-width: 450px;
    max-height: 450px;
    margin-top: 0px;
  }
}

@media (min-width: 900px){
  h1{
    margin: 50px 0 50px;
  }
  p{
    max-width: 95%;
  }
  p > span{
  margin-top: -5px;
  }
  section.devstack{
    margin-top: 5px;
  }
}
</style>

<script>
const sect = document.querySelector('section.animateOnLoad')
const zoom = document.querySelector('img.devicons')
  window.onload = function() {
    sect.classList.add("fadeIn")
    zoom.classList.add("zoomIn")
  }

</script>